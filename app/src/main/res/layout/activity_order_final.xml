    <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2" android:layout_marginBottom="16dp"
            android:id="@+id/constraintLayout">

        <Button
                android:text="Печать ярлыка заказа"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_final_client_print_btn"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="1.0"/>
        <Button
                android:text="Оплатить"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/order_final_pay_btn"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"/>
