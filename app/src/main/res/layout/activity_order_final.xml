                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/order_is_paid_text"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toEndOf="parent" android:textSize="36sp" android:textColor="#E91E63"/>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
