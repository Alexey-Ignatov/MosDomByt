                <TextView
                        android:text=". . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . "
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@+id/textView8"
                        app:layout_constraintEnd_toStartOf="@+id/order_client_phone_holder"
                        android:layout_marginEnd="8dp"/>
                <TextView
                        android:text="79647080299"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/order_client_phone_holder"
                        android:textSize="18sp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="32dp" app:layout_constraintTop_toTopOf="parent"
