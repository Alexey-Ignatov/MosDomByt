<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </android.support.constraint.ConstraintLayout>
    <TextView
            android:text="Введите товары"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_centerHorizontal="true" android:layout_marginTop="16dp"/>
    <android.support.constraint.ConstraintLayout
            android:layout_below="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/constraintLayout5"
            android:layout_marginBottom="0dp"
            android:layout_centerInParent="true">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.14"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
            >
                <TextView
                        android:text="Имя"
                        android:layout_width="91dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:textSize="14sp" android:textAlignment="viewEnd"
                        android:layout_marginEnd="24dp"
                        app:layout_constraintEnd_toStartOf="@+id/ed_txt_name"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                <EditText
                        android:layout_width="177dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:text="Name"
                        android:ems="10"
                        android:id="@+id/ed_txt_name"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" android:textSize="14sp"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout2">
                <EditText
                        android:layout_width="177dp"
                        android:layout_height="47dp"
                        android:inputType="phone"
                        android:ems="10"
                        android:id="@+id/ed_txt_phone"
                        android:hint="79631234567"
                        android:textSize="14sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                        android:layout_width="105dp"
                        android:layout_height="24dp"
                        android:inputType="textPersonName"
                        android:text=" Телефон"
                        android:ems="10"
                        android:id="@+id/editText"
                        app:layout_constraintBottom_toBottomOf="parent" android:textSize="14sp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="24dp"
                        app:layout_constraintEnd_toStartOf="@+id/ed_txt_phone"
                        android:textAlignment="viewEnd"/>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/constraintLayout4"
            android:layout_below="@+id/constraintLayout5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout5"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout6">

        <TextView
                android:text="Услуги (400р)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.31" app:layout_constraintEnd_toEndOf="parent"
                android:textSize="18sp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
            android:layout_below="@+id/constraintLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/constraintLayout6"
    >

        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/list_item"
                android:id="@+id/order_list_view"
        />
    </LinearLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/footer" android:layout_below="@id/constraintLayout6">

        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btn_del_add_layout"
                tools:layout_editor_absoluteX="136dp">

            <Button
                    android:text="Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button"/>
            <Button
                    android:text="Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="-4dp"
                    android:id="@+id/button2" app:layout_constraintStart_toEndOf="@+id/button"
                    android:layout_marginStart="32dp"/>
        </android.support.constraint.ConstraintLayout>
        <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button6"
                tools:layout_editor_absoluteX="196dp" app:layout_constraintBottom_toBottomOf="parent"
        />
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>