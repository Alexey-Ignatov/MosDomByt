<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.ChoosePayTypeActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.24000001"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp">

        <Button
                android:text="Услуга с оплатой при получении"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:id="@+id/post_pay_option_btn"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/get_compl_order_btn" android:layout_marginEnd="6dp"/>
        <Button
                android:text="Оплата товаров"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:id="@+id/regular_pay_btn"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/get_compl_order_btn" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="6dp" app:layout_constraintStart_toEndOf="@+id/pre_pay_option_btn"
                android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" android:textSize="18sp"/>
        <Button
                android:text="Услуга по предоплате"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:id="@+id/pre_pay_option_btn" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/post_pay_option_btn"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/regular_pay_btn" android:layout_marginEnd="6dp"/>
        <Button
                android:text="Выдача по телефону или номеру заказа"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:id="@+id/get_compl_order_btn"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="6dp" app:layout_constraintStart_toEndOf="@+id/post_pay_option_btn"
                android:layout_marginEnd="8dp" android:textSize="18sp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>